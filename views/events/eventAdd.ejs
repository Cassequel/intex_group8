<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Add Event | Ella Rises</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/png" href="/images/favicon.png" />
  <link rel="stylesheet" href="/styles/styles.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
 <style>
    .info-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 0.75rem;
      background: #f9f5ea;
      border: 1px solid rgba(153, 183, 198, 0.2);
      border-radius: 12px;
      padding: 1rem;
    }
    .info-item {
      display: flex;
      flex-direction: column;
      gap: 0.25rem;
    }
    .info-item span {
      font-size: 0.9rem;
      color: var(--color-text-soft);
    }
  </style>
</head>
<body>
    <!-- NAVBAR -->
    <%- include('../partials/navbar') %>

  <!-- HERO -->
  <section class="hero">
    <div class="hero-overlay"></div>
    <div class="container hero-content">
      <p class="eyebrow">Programs</p>
      <h1>Add event</h1>
      <p class="hero-subtitle">Choose a template and set the occurrence details.</p>
    </div>
  </section>

  <!-- FORM -->
  <section class="section section--light">
    <div class="container">
      <div class="form-card">
        <% if (typeof error_message !== "undefined" && error_message) { %>
          <div class="alert alert--error"><%= error_message %></div>
        <% } %>
        <form class="form-grid" method="POST" action="/events/new">
          <div class="form-field">
            <label for="event_template_id">Template</label>
            <select id="event_template_id" name="event_template_id" required>
              <option value="">Select a template</option>
              <% templates.forEach((t) => { %>
                <option value="<%= t.event_template_id %>"><%= t.event_name %></option>
              <% }) %>
            </select>
          </div>

          <div class="info-grid" id="templateInfo">
            <div class="info-item">
              <span>Name</span>
              <strong id="tmplName"></strong>
            </div>
            <div class="info-item">
              <span>Type</span>
              <strong id="tmplType"></strong>
            </div>
            <div class="info-item">
              <span>Recurrence</span>
              <strong id="tmplRecurrence"></strong>
            </div>
            <div class="info-item">
              <span>Default capacity</span>
              <strong id="tmplCapacity"></strong>
            </div>
            <div class="info-item" style="grid-column: 1 / -1;">
              <span>Description</span>
              <strong id="tmplDescription"></strong>
            </div>
          </div>

          <div class="form-grid-two" style="margin-top: 1rem;">
            <div class="form-field">
              <label for="event_date_time_start">Start</label>
              <input id="event_date_time_start" name="event_date_time_start" type="datetime-local" />
            </div>
            <div class="form-field">
              <label for="event_date_time_end">End</label>
              <input id="event_date_time_end" name="event_date_time_end" type="datetime-local" />
            </div>
          </div>

          <div class="form-field">
            <label for="event_location">Location</label>
            <input id="event_location" name="event_location" type="text" />
          </div>

          <div class="form-field">
            <label for="event_capacity">Capacity</label>
            <input id="event_capacity" name="event_capacity" type="number" />
          </div>

          <div class="form-field">
            <label for="event_registration_deadline">Registration deadline</label>
            <input id="event_registration_deadline" name="event_registration_deadline" type="datetime-local" />
          </div>

          <div class="form-field" style="margin-top: 0.5rem;">
            <button type="submit" class="btn btn--primary btn--large">Save event</button>
            <a href="/events" class="btn btn--ghost btn--large" style="margin-left: 0.5rem;">Cancel</a>
          </div>
        </form>
      </div>
    </div>
  </section>

  <script>
    const templates = <%- JSON.stringify(templates || []) %>;
  
    const tmplSelect = document.getElementById("event_template_id");
    const tmplName = document.getElementById("tmplName");
    const tmplType = document.getElementById("tmplType");
    const tmplRecurrence = document.getElementById("tmplRecurrence");
    const tmplCapacity = document.getElementById("tmplCapacity");
    const tmplDescription = document.getElementById("tmplDescription");
  
    tmplSelect.addEventListener("change", () => {
      const selected = templates.find(
        (t) => String(t.event_template_id) === tmplSelect.value
      );
  
      if (!selected) {
        tmplName.textContent = "";
        tmplType.textContent = "";
        tmplRecurrence.textContent = "";
        tmplCapacity.textContent = "";
        tmplDescription.textContent = "";
        return;
      }
  
      tmplName.textContent = selected.event_name || "";
      tmplType.textContent = selected.event_type || "";
      tmplRecurrence.textContent = selected.event_recurrence_pattern || "";
      tmplCapacity.textContent = selected.default_capacity || "";
      tmplDescription.textContent = selected.event_description || "";
    });
  </script>
</body>
</html>
