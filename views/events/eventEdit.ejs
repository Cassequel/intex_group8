<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Edit Event | Ella Rises</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/styles/styles.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  <style>
    .info-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 0.75rem;
      background: #f9f5ea;
      border: 1px solid rgba(153, 183, 198, 0.2);
      border-radius: 12px;
      padding: 1rem;
    }
    .info-item {
      display: flex;
      flex-direction: column;
      gap: 0.25rem;
    }
    .info-item span {
      font-size: 0.9rem;
      color: var(--color-text-soft);
    }
  </style>
</head>
<body>
  <!-- NAVBAR -->
  <header class="site-header">
    <div class="container nav-container">
      <a href="/" class="logo">
        <span class="logo-mark">ER</span>
        <span class="logo-text">Ella Rises</span>
      </a>

      <nav class="nav">
        <button class="nav-toggle" aria-label="Toggle navigation">
          <span></span><span></span><span></span>
        </button>
        <ul class="nav-links">
          <li><a href="/">Home</a></li>
          <li><a href="/events">Events</a></li>
          <% if (userLevel !== 'U') { %>
            <li><a href="/users">Users</a></li>
            <li><a href="/managerDashboard" class="btn btn--outline">Dashboard</a></li>
          <% } %>
        </ul>
      </nav>
    </div>
  </header>

  <!-- HERO -->
  <section class="hero">
    <div class="hero-overlay"></div>
    <div class="container hero-content">
      <p class="eyebrow">Programs</p>
      <h1>Edit event</h1>
      <p class="hero-subtitle">Select a template and update occurrence details.</p>
    </div>
  </section>

  <!-- FORM -->
  <section class="section section--light">
    <div class="container">
      <div class="form-card">
        <% if (typeof error_message !== "undefined" && error_message) { %>
          <div class="alert alert--error"><%= error_message %></div>
        <% } %>
        <form class="form-grid" method="POST" action="/events/<%= event.eventoccurrenceid %>/edit">
          <div class="form-field">
            <label for="eventtemplateid">Template</label>
            <select id="eventtemplateid" name="eventtemplateid" required>
              <option value="">Select a template</option>
              <% templates.forEach((t) => { %>
                <option value="<%= t.eventtemplateid %>" <%= t.eventtemplateid === event.eventtemplateid ? 'selected' : '' %>><%= t.eventname %></option>
              <% }) %>
            </select>
          </div>

          <div class="info-grid" id="templateInfo">
            <div class="info-item">
              <span>Name</span>
              <strong id="tmplName"><%= event.eventname || '' %></strong>
            </div>
            <div class="info-item">
              <span>Type</span>
              <strong id="tmplType"><%= event.eventtype || '' %></strong>
            </div>
            <div class="info-item">
              <span>Recurrence</span>
              <strong id="tmplRecurrence"><%= event.eventrecurrencepattern || '' %></strong>
            </div>
            <div class="info-item">
              <span>Default capacity</span>
              <strong id="tmplCapacity"><%= event.eventdefaultcapacity || '' %></strong>
            </div>
            <div class="info-item" style="grid-column: 1 / -1;">
              <span>Description</span>
              <strong id="tmplDescription"><%= event.eventdescription || '' %></strong>
            </div>
          </div>

          <div class="form-grid-two" style="margin-top: 1rem;">
            <div class="form-field">
              <label for="eventdatetimestart">Start</label>
              <input id="eventdatetimestart" name="eventdatetimestart" type="datetime-local" value="<%= event.eventdatetimestart ? (event.eventdatetimestart.toISOString ? event.eventdatetimestart.toISOString().slice(0,16) : String(event.eventdatetimestart).slice(0,16)) : '' %>" />
            </div>
            <div class="form-field">
              <label for="eventdatetimeend">End</label>
              <input id="eventdatetimeend" name="eventdatetimeend" type="datetime-local" value="<%= event.eventdatetimeend ? (event.eventdatetimeend.toISOString ? event.eventdatetimeend.toISOString().slice(0,16) : String(event.eventdatetimeend).slice(0,16)) : '' %>" />
            </div>
          </div>

          <div class="form-field">
            <label for="eventlocation">Location</label>
            <input id="eventlocation" name="eventlocation" type="text" value="<%= event.eventlocation || '' %>" />
          </div>

          <div class="form-field">
            <label for="eventcapacity">Capacity</label>
            <input id="eventcapacity" name="eventcapacity" type="number" value="<%= event.eventcapacity || '' %>" />
          </div>

          <div class="form-field">
            <label for="eventregistrationdeadline">Registration deadline</label>
            <input id="eventregistrationdeadline" name="eventregistrationdeadline" type="datetime-local" value="<%= event.eventregistrationdeadline ? (event.eventregistrationdeadline.toISOString ? event.eventregistrationdeadline.toISOString().slice(0,16) : String(event.eventregistrationdeadline).slice(0,16)) : '' %>" />
          </div>

          <div class="form-field" style="margin-top: 0.5rem;">
            <button type="submit" class="btn btn--primary btn--large">Save changes</button>
            <a href="/events" class="btn btn--ghost btn--large" style="margin-left: 0.5rem;">Cancel</a>
          </div>
        </form>
      </div>
    </div>
  </section>

  <script>
    const navToggle = document.querySelector(".nav-toggle");
    const navLinks = document.querySelector(".nav-links");
    navToggle.addEventListener("click", () => {
      navLinks.classList.toggle("nav-links--open");
      navToggle.classList.toggle("nav-toggle--open");
    });

    const templates = <%- JSON.stringify(templates || []) %>;
    const tmplSelect = document.getElementById("eventtemplateid");
    const tmplName = document.getElementById("tmplName");
    const tmplType = document.getElementById("tmplType");
    const tmplRecurrence = document.getElementById("tmplRecurrence");
    const tmplCapacity = document.getElementById("tmplCapacity");
    const tmplDescription = document.getElementById("tmplDescription");

    tmplSelect?.addEventListener("change", () => {
      const selected = templates.find((t) => String(t.eventtemplateid) === tmplSelect.value);
      if (!selected) return;
      tmplName.textContent = selected.eventname || "";
      tmplType.textContent = selected.eventtype || "";
      tmplRecurrence.textContent = selected.eventrecurrencepattern || "";
      tmplCapacity.textContent = selected.eventdefaultcapacity || "";
      tmplDescription.textContent = selected.eventdescription || "";
    });
  </script>
</body>
</html>
