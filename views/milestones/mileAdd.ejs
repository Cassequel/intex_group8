<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Add Milestone | Ella Rises</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/styles/styles.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
</head>
<body>
  <!-- NAVBAR -->
  <header class="site-header">
    <div class="container nav-container">
      <a href="/" class="logo">
        <span class="logo-mark">ER</span>
        <span class="logo-text">Ella Rises</span>
      </a>

      <nav class="nav">
        <button class="nav-toggle" aria-label="Toggle navigation">
          <span></span><span></span><span></span>
        </button>
        <ul class="nav-links">
          <li><a href="/">Home</a></li>
          <li><a href="/milestones">Milestones</a></li>
        </ul>
      </nav>
    </div>
  </header>

  <!-- HERO -->
  <section class="hero">
    <div class="hero-overlay"></div>
    <div class="container hero-content">
      <p class="eyebrow">Progress</p>
      <h1>Add milestone</h1>
      <p class="hero-subtitle">Create a milestone for a participant using their email.</p>
    </div>
  </section>

  <!-- FORM -->
  <section class="section section--light">
    <div class="container">
      <div class="form-card">
        <% if (typeof error_message !== "undefined" && error_message) { %>
          <div class="alert alert--error"><%= error_message %></div>
        <% } %>
        <form class="form-grid" method="POST" action="/milestones/new">
          <div class="form-field">
            <label for="email">Participant email</label>
            <input id="email" name="email" type="email" required />
            <small>Weâ€™ll look up the participant by this email.</small>
          </div>
          <div class="form-field">
            <label for="title">Title</label>
            <input id="title" name="title" type="text" required />
          </div>
          <div class="form-field">
            <label for="achieved_date">Achieved date</label>
            <input id="achieved_date" name="achieved_date" type="date" />
          </div>
          <div class="form-field" style="margin-top: 0.5rem;">
            <button type="submit" class="btn btn--primary btn--large">Save milestone</button>
            <a href="/milestones" class="btn btn--ghost btn--large" style="margin-left: 0.5rem;">Cancel</a>
          </div>
        </form>
      </div>
    </div>
  </section>

  <script>
    const navToggle = document.querySelector(".nav-toggle");
    const navLinks = document.querySelector(".nav-links");
    navToggle.addEventListener("click", () => {
      navLinks.classList.toggle("nav-links--open");
      navToggle.classList.toggle("nav-toggle--open");
    });
  </script>
</body>
</html>
