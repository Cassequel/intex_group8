<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<title>Add Donation | Ella Rises</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<link rel="stylesheet" href="/styles/styles.css" />
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
</head>
<body>
<!-- NAVBAR -->
<header class="site-header">
<div class="container nav-container">
<a href="/" class="logo">
<span class="logo-mark">ER</span>
<span class="logo-text">Ella Rises</span>
</a>
<nav class="nav">
<button class="nav-toggle" aria-label="Toggle navigation">
<span></span><span></span><span></span>
</button>
<ul class="nav-links">
<li><a href="/">Home</a></li>
<li><a href="/donations">Donations</a></li>
</ul>
</nav>
</div>
</header>
<!-- HERO -->
<section class="hero">
<div class="hero-overlay"></div>
<div class="container hero-content">
<p class="eyebrow">Give</p>
<h1>Make a donation</h1>
<p class="hero-subtitle">Enter your donation amount below.</p>
</div>
</section>
<!-- FORM -->
<section class="section section--light">
<div class="container">
<div class="form-card">
<% if (typeof error_message !== "undefined" && error_message) { %>
<div class="alert alert--error"><%= error_message %></div>
<% } %>

<% if (participant) { %>
<!-- Auto-populated participant info -->
<div style="margin-bottom: 1.5rem; padding: 1rem; background: #f5f5f5; border-radius: 8px;">
<p style="margin: 0 0 0.5rem 0; font-weight: 600;">Donating as:</p>
<p style="margin: 0 0 0.25rem 0;"><%= participant.participant_first_name %> <%= participant.participant_last_name %></p>
<p style="margin: 0; color: #666; font-size: 0.9rem;"><%= participant.participant_email %></p>
</div>

<form class="form-grid" method="POST" action="/donations/new">
<input type="hidden" name="participant_id" value="<%= participant.participant_id %>" />
<input type="hidden" name="participant_email" value="<%= participant.participant_email %>" />
<input type="hidden" name="participant_first_name" value="<%= participant.participant_first_name %>" />
<input type="hidden" name="participant_last_name" value="<%= participant.participant_last_name %>" />
<input type="hidden" name="donation_date" value="<%= today %>" />

<div class="form-field">
<label for="donation_amount">Donation amount (USD)</label>
<input id="donation_amount" name="donation_amount" type="number" step="0.01" required autofocus />
</div>

<div class="form-field" style="margin-top: 0.5rem;">
<button type="submit" class="btn btn--primary btn--large">Submit donation</button>
<button type="button" id="notYouBtn" class="btn btn--ghost btn--large" style="margin-left: 0.5rem;">Not you?</button>
<a href="/donations" class="btn btn--ghost btn--large" style="margin-left: 0.5rem;">Cancel</a>
</div>
</form>
<% } else { %>
<!-- Manual email lookup form -->
<form class="form-grid" method="GET" action="/donAdd">
<p style="margin-bottom: 1rem;"><%= showManualForm ? 'Enter your email to find your record:' : 'We need to look up your record.' %></p>
<div class="form-field">
<label for="lookup_email">Email</label>
<input id="lookup_email" name="email" type="email" required autofocus />
<small>We'll use this to find your record.</small>
</div>
<div class="form-field" style="margin-top: 0.5rem;">
<button type="submit" class="btn btn--primary btn--large">Look up my info</button>
<a href="/donations" class="btn btn--ghost btn--large" style="margin-left: 0.5rem;">Cancel</a>
</div>
</form>
<% } %>
</div>
</div>
</section>

<script>
const navToggle = document.querySelector(".nav-toggle");
const navLinks = document.querySelector(".nav-links");
navToggle.addEventListener("click", () => {
navLinks.classList.toggle("nav-links--open");
navToggle.classList.toggle("nav-toggle--open");
});

// Handle "Not you?" button
const notYouBtn = document.getElementById("notYouBtn");
if (notYouBtn) {
notYouBtn.addEventListener("click", () => {
window.location.href = "/donAdd?manual=true";
});
}
</script>
</body>
</html>