<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Edit Donation | Ella Rises</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/styles/styles.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
</head>
<body>
  <!-- NAVBAR -->
  <header class="site-header">
    <div class="container nav-container">
      <a href="/" class="logo">
        <span class="logo-mark">ER</span>
        <span class="logo-text">Ella Rises</span>
      </a>

      <nav class="nav">
        <button class="nav-toggle" aria-label="Toggle navigation">
          <span></span><span></span><span></span>
        </button>
        <ul class="nav-links">
          <li><a href="/">Home</a></li>
          <li><a href="/donations">Donations</a></li>
        </ul>
      </nav>
    </div>
  </header>

  <!-- HERO -->
  <section class="hero">
    <div class="hero-overlay"></div>
    <div class="container hero-content">
      <p class="eyebrow">Give</p>
      <h1>Edit donation</h1>
      <p class="hero-subtitle">Update donor email lookup, donation_amount, or date.</p>
    </div>
  </section>

  <!-- FORM -->
  <section class="section section--light">
    <div class="container">
       <div class="form-card">
        <% if (typeof error_message !== "undefined" && error_message) { %>
          <div class="alert alert--error"><%= error_message %></div>
        <% } %>
        <form class="form-grid" method="POST" action="/donations/<%= donation.donation_id %>/edit">
          <div class="form-grid-two">
            <div class="form-field">
              <label for=" participant_first_name">First name</label>
              <input id=" participant_first_name" name=" participant_first_name" type="text" value="<%= donation.participant_first_name || '' %>" required />
            </div>
            <div class="form-field">
              <label for=" participant_last_name">Last name</label>
              <input id=" participant_last_name" name=" participant_last_name" type="text" value="<%= donation.participant_last_name || '' %>" required />
            </div>
          </div>
          <div class="form-field">
            <label for="email">Email</label>
            <input id="email" name="email" type="email" value="<%= donation.email || donation.participant_email || '' %>" required />
            <small>Weâ€™ll re-lookup the participant by this email.</small>
          </div>
          <div class="form-grid-two">
            <div class="form-field">
              <label for="donation_date">Donation date</label>
              <input id="donation_date" name="donation_date" type="date" value="<%= donation.donation_date ? (donation.donation_date.toISOString ? donation.donation_date.toISOString().slice(0,10) : String(donation.donation_date).slice(0,10)) : '' %>" />
            </div>
            <div class="form-field">
              <label for="donation_amount">donation_amount (USD)</label>
              <input id="donation_amount" name="donation_amount" type="number" step="0.01" value="<%= donation.donation_amount || '' %>" required />
            </div>
          </div>
          <div class="form-field" style="margin-top: 0.5rem;">
            <button type="submit" class="btn btn--primary btn--large">Save changes</button>
            <a href="/donations" class="btn btn--ghost btn--large" style="margin-left: 0.5rem;">Cancel</a>
          </div>
        </form>
      </div>
    </div>
  </section>

  <script>
    const navToggle = document.querySelector(".nav-toggle");
    const navLinks = document.querySelector(".nav-links");
    navToggle.addEventListener("click", () => {
      navLinks.classList.toggle("nav-links--open");
      navToggle.classList.toggle("nav-toggle--open");
    });
  </script>
</body>
</html>
