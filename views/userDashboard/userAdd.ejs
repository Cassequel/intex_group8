<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Add User | Ella Rises</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/png" href="/images/favicon.png" />
  <link rel="stylesheet" href="/styles/styles.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
 <style>
    .input-error {
      border-color: #d14343 !important;
      background: rgba(209, 67, 67, 0.08) !important;
    }
  </style>
</head>
<body>
  <!-- NAVBAR -->
  <%- include('../partials/navbar') %>

  <!-- HERO -->
  <section class="hero">
    <div class="hero-overlay"></div>
    <div class="container hero-content">
      <p class="eyebrow">Admin</p>
      <h1>Add user</h1>
      <p class="hero-subtitle">Create a new account and assign a level.</p>
    </div>
  </section>

  <!-- FORM -->
  <section class="section section--light">
    <div class="container">
      <div class="form-card">
        <%
          const errorField = typeof error_field !== "undefined" ? error_field : null;
          const values = (typeof formValues !== "undefined" && formValues) ? formValues : { username: "", email: "", password: "", level: "U" };
        %>
        <% if (typeof error_message !== "undefined" && error_message) { %>
          <div class="alert alert--error"><%= error_message %></div>
        <% } %>
        <form class="form-grid" method="POST" action="/users/new">
          <div class="form-field">
            <label for="username">Username</label>
            <input id="username" name="username" type="text" required class="<%= errorField === 'username' ? 'input-error' : '' %>" value="<%= values.username || '' %>" />
          </div>
          <div class="form-field">
            <label for="email">Email</label>
            <input id="email" name="email" type="email" required class="<%= errorField === 'email' ? 'input-error' : '' %>" value="<%= values.email || '' %>" />
          </div>
          <div class="form-field">
            <label for="password">Password</label>
            <input id="password" name="password" type="text" required class="<%= errorField === 'password' ? 'input-error' : '' %>" value="<%= values.password || '' %>" />
          </div>
          <div class="form-field">
            <label for="level">Level (U or M)</label>
            <select id="level" name="level" class="<%= errorField === 'level' ? 'input-error' : '' %>">
              <option value="U" <%= values.level === 'U' ? 'selected' : '' %>>U</option>
              <option value="M" <%= values.level === 'M' ? 'selected' : '' %>>M</option>
            </select>
          </div>
          <div class="form-field" style="margin-top: 0.5rem;">
            <button type="submit" class="btn btn--primary btn--large">Save user</button>
            <a href="/users" class="btn btn--ghost btn--large" style="margin-left: 0.5rem;">Cancel</a>
          </div>
        </form>
      </div>
    </div>
  </section>

  <script>
    const navToggle = document.querySelector(".nav-toggle");
    const navLinks = document.querySelector(".nav-links");
    navToggle.addEventListener("click", () => {
      navLinks.classList.toggle("nav-links--open");
      navToggle.classList.toggle("nav-toggle--open");
    });
  </script>
</body>
</html>
