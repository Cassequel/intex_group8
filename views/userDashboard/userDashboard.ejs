<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Users | Ella Rises</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/png" href="/images/favicon.png" />
  <link rel="stylesheet" href="/styles/styles.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
</head>
<body>
  <!-- NAVBAR -->
  <%- include('../partials/navbar') %>

  <!-- HERO -->
  <section class="hero">
    <div class="hero-overlay"></div>
    <div class="container hero-content">
      <p class="eyebrow">Admin</p>
      <h1>Users</h1>
      <p class="hero-subtitle">
        Manage application users, roles, and access levels.
      </p>
      <div class="hero-actions">
        <a href="/users/new" class="btn btn--primary">Add user</a>
      </div>
    </div>
  </section>

  <!-- USERS TABLE -->
  <section class="section section--light">
    <div class="container">
      <div class="section-header">
        <h2>All users</h2>
        <p>View and manage accounts from the users table.</p>
      </div>

      <div class="table-card">
        <div class="table-card__header">
          <span>Users</span>
          <% if (userLevel === 'M') { %>
            <a href="/users/new" class="btn btn--primary btn--small">Add user</a>
          <% } %>
        </div>
        <div class="table-card__body">
          <table class="data-table">
            <thead>
              <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Level</th>
                <% if (userLevel === 'M') { %><th>Actions</th><% } %>
              </tr>
            </thead>
            <tbody>
              <% if (users && users.length) { %>
                <% users.forEach((user) => { %>
                  <tr>
                    <td><%= user.username %></td>
                    <td><%= user.email %></td>
                    <td><%= user.level || 'U' %></td>
                    <% if (userLevel === 'M') { %>
                      <td class="table-actions">
                        <a class="btn btn--outline btn--small" href="/users/<%= user.user_id %>/edit">Edit</a>
                        <form class="inline-form" method="POST" action="/users/<%= user.user_id %>/delete">
                          <button type="submit" class="btn btn--ghost btn--small">Delete</button>
                        </form>
                      </td>
                    <% } %>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="<%= userLevel === 'M' ? 4 : 3 %>" class="empty-row">No users found.</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>

  <script>
    // Simple mobile nav toggle
    const navToggle = document.querySelector(".nav-toggle");
    const navLinks = document.querySelector(".nav-links");

    navToggle.addEventListener("click", () => {
      navLinks.classList.toggle("nav-links--open");
      navToggle.classList.toggle("nav-toggle--open");
    });
  </script>
</body>
</html>
