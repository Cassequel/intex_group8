<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Users | Ella Rises</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/png" href="/images/favicon.png" />
  <link rel="stylesheet" href="/styles/styles.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  <style>
    .modal-overlay {
      position: fixed;
      inset: 0;
      background: rgba(0, 0, 0, 0.4);
      display: none;
      align-items: center;
      justify-content: center;
      z-index: 900;
    }
    .modal {
      background: #fff;
      border-radius: 12px;
      padding: 1.75rem;
      max-width: 460px;
      width: 90%;
      box-shadow: 0 16px 48px rgba(0, 0, 0, 0.18);
      text-align: center;
    }
    .modal h3 {
      margin-top: 0;
      margin-bottom: 0.75rem;
    }
    .modal-actions {
      display: flex;
      justify-content: center;
      gap: 0.75rem;
      margin-top: 1.25rem;
      flex-wrap: wrap;
    }
    .modal-overlay.is-open {
      display: flex;
    }
  </style>
</head>
<body>
  <!-- NAVBAR -->
  <%- include('../partials/navbar') %>

  <!-- HERO -->
  <section class="hero">
    <div class="hero-overlay"></div>
    <div class="container hero-content">
      <p class="eyebrow">Admin</p>
      <h1>Users</h1>
      <p class="hero-subtitle">
        Manage application users, roles, and access levels.
      </p>
      <div class="hero-actions">
        <a href="/users/new" class="btn btn--primary">Add user</a>
      </div>
    </div>
  </section>

  <!-- USERS TABLE -->
  <section class="section section--light">
    <div class="container">
      <div class="section-header">
        <h2>All users</h2>
        <p>View and manage accounts from the users table.</p>
      </div>

      <div class="table-card">
        <div class="table-card__header">
          <span>Users</span>
          <div style="display: flex; gap: 0.5rem; flex-wrap: wrap; align-items: center;">
            <input type="search" id="userSearch" placeholder="Search users..." style="padding: 0.5rem 0.75rem; border: 1px solid var(--color-border); border-radius: 10px; min-width: 200px;" />
            <% if (userLevel === 'M') { %>
              <a href="/users/new" class="btn btn--primary btn--small">Add user</a>
            <% } %>
          </div>
        </div>
        <div class="table-card__body">
          <table class="data-table">
            <thead>
              <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Level</th>
                <% if (userLevel === 'M') { %><th>Actions</th><% } %>
              </tr>
            </thead>
            <tbody>
              <% if (users && users.length) { %>
                <% users.forEach((user) => { %>
                  <tr data-username="<%= (user.username || '').toLowerCase() %>" data-email="<%= (user.email || '').toLowerCase() %>">
                    <td><%= user.username %></td>
                    <td><%= user.email %></td>
                    <td><%= user.level || 'U' %></td>
                    <% if (userLevel === 'M') { %>
                      <td class="table-actions">
                        <a class="btn btn--outline btn--small" href="/users/<%= user.user_id %>/edit">Edit</a>
                        <button type="button" class="btn btn--ghost btn--small delete-btn" data-id="<%= user.user_id %>" data-name="<%= user.username %>">Delete</button>
                      </td>
                    <% } %>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="<%= userLevel === 'M' ? 4 : 3 %>" class="empty-row">No users found.</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>

  <div class="modal-overlay">
    <div class="modal">
      <h3>Confirm delete</h3>
      <p id="deleteModalMessage">Are you sure you want to delete this user?</p>
      <div class="modal-actions">
        <button class="btn btn--ghost" id="cancelDelete" type="button">No, keep</button>
        <button class="btn btn--primary" id="confirmDelete" type="button">Yes, delete</button>
      </div>
    </div>
  </div>

  <script>
    // Simple mobile nav toggle
    const navToggle = document.querySelector(".nav-toggle");
    const navLinks = document.querySelector(".nav-links");

    navToggle.addEventListener("click", () => {
      navLinks.classList.toggle("nav-links--open");
      navToggle.classList.toggle("nav-toggle--open");
    });

    const modalOverlay = document.querySelector(".modal-overlay");
    const modalMessage = document.querySelector("#deleteModalMessage");
    const confirmBtn = document.querySelector("#confirmDelete");
    const cancelBtn = document.querySelector("#cancelDelete");
    const deleteButtons = document.querySelectorAll(".delete-btn");
    let pendingId = null;

    deleteButtons.forEach((btn) => {
      btn.addEventListener("click", () => {
        pendingId = btn.dataset.id;
        const name = btn.dataset.name || "this user";
        modalMessage.textContent = `Are you sure you want to delete ${name}?`;
        modalOverlay.classList.add("is-open");
      });
    });

    cancelBtn.addEventListener("click", () => {
      pendingId = null;
      modalOverlay.classList.remove("is-open");
    });

    confirmBtn.addEventListener("click", async () => {
      if (!pendingId) return;
      try {
        const res = await fetch(`/users/${pendingId}/delete`, { method: "POST" });
        if (!res.ok) throw new Error("Request failed");
        window.location.reload();
      } catch (err) {
        console.error(err);
        alert("Could not delete user. Please try again.");
      } finally {
        pendingId = null;
        modalOverlay.classList.remove("is-open");
      }
    });

    // Simple client-side search by username and email
    const userSearch = document.getElementById("userSearch");
    const userRows = Array.from(document.querySelectorAll("tbody tr"));

    userSearch?.addEventListener("input", () => {
      const term = userSearch.value.trim().toLowerCase();
      userRows.forEach((row) => {
        const username = row.dataset.username || "";
        const email = row.dataset.email || "";
        row.style.display = username.includes(term) || email.includes(term) ? "" : "none";
      });
    });
  </script>
</body>
</html>