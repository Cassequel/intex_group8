<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Edit Registration | Ella Rises</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/styles/styles.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
</head>
<body>
  <!-- NAVBAR -->
  <%- include('../partials/navbar') %>

  <!-- HERO -->
  <section class="hero">
    <div class="hero-overlay"></div>
    <div class="container hero-content">
      <p class="eyebrow">Registration</p>
      <h1>Edit registration #<%= registration.registration_id %></h1>
      <p class="hero-subtitle">
        <%= registration.participant_name || ('Participant ID ' + registration.participant_id) %> â€” <%= registration.event_name || ('Event occurrence ' + registration.event_occurence_id) %>
      </p>
    </div>
  </section>

  <section class="section section--light">
    <div class="container">
      <div class="form-card">
        <% if (error_message) { %>
          <div class="alert alert--error"><%= error_message %></div>
        <% } %>
        <form class="form-grid" method="POST" action="/registrations/<%= registration.registration_id %>/edit">
          <div class="form-field">
            <label>Participant</label>
            <input type="text" value="<%= registration.participant_name || ('ID ' + registration.participant_id) %>" disabled />
          </div>
          <div class="form-field">
            <label>Event</label>
            <input type="text" value="<%= registration.event_name || ('Occurrence ' + registration.event_occurence_id) %>" disabled />
          </div>
          <div class="form-field">
            <label for="registration_status">Status</label>
            <select id="registration_status" name="registration_status">
              <option value="">-- Select --</option>
              <option value="registered" <%= registration.registration_status === 'registered' ? 'selected' : '' %>>Registered</option>
              <option value="attended" <%= registration.registration_status === 'attended' ? 'selected' : '' %>>Attended</option>
              <option value="cancelled" <%= registration.registration_status === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
            </select>
          </div>
          <div class="form-field">
            <label for="registration_attended_flag">Attended</label>
            <select id="registration_attended_flag" name="registration_attended_flag">
              <option value="false" <%= !registration.registration_attended_flag ? 'selected' : '' %>>No</option>
              <option value="true" <%= registration.registration_attended_flag ? 'selected' : '' %>>Yes</option>
            </select>
          </div>
          <div class="form-field">
            <label for="registration_check_in_time">Check-in time</label>
            <%
              const ci = registration.registration_check_in_time;
              const ciVal = ci
                ? (ci.toISOString ? ci.toISOString().slice(0,16) : String(ci).slice(0,16))
                : '';
            %>
            <input id="registration_check_in_time" name="registration_check_in_time" type="datetime-local" value="<%= ciVal %>" />
          </div>
          <div class="form-field" style="margin-top: 0.5rem;">
            <button type="submit" class="btn btn--primary btn--large">Save changes</button>
            <a href="/registrations" class="btn btn--ghost btn--large" style="margin-left: 0.5rem;">Cancel</a>
          </div>
        </form>
      </div>
    </div>
  </section>

  <script>
    const navToggle = document.querySelector(".nav-toggle");
    const navLinks = document.querySelector(".nav-links");
    navToggle?.addEventListener("click", () => {
      navLinks.classList.toggle("nav-links--open");
      navToggle.classList.toggle("nav-toggle--open");
    });
  </script>
</body>
</html>
