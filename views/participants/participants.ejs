<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Participants | Ella Rises</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/styles/styles.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  <style>
    .modal-overlay {
      position: fixed;
      inset: 0;
      background: rgba(0, 0, 0, 0.4);
      display: none;
      align-items: center;
      justify-content: center;
      z-index: 900;
    }
    .modal {
      background: #fff;
      border-radius: 12px;
      padding: 1.75rem;
      max-width: 460px;
      width: 90%;
      box-shadow: 0 16px 48px rgba(0, 0, 0, 0.18);
      text-align: center;
    }
    .modal h3 {
      margin-top: 0;
      margin-bottom: 0.75rem;
    }
    .modal-actions {
      display: flex;
      justify-content: center;
      gap: 0.75rem;
      margin-top: 1.25rem;
      flex-wrap: wrap;
    }
    .modal-overlay.is-open {
      display: flex;
    }
  </style>
</head>
<body>
  <!-- NAVBAR -->
  <header class="site-header">
    <div class="container nav-container">
      <a href="/" class="logo">
        <span class="logo-mark">ER</span>
        <span class="logo-text">Ella Rises</span>
      </a>

      <nav class="nav">
        <button class="nav-toggle" aria-label="Toggle navigation">
          <span></span><span></span><span></span>
        </button>
        <ul class="nav-links">
          <li><a href="/">Home</a></li>
          <li><a href="#participants">Participants</a></li>
          <li><a href="#actions">Actions</a></li>
        </ul>
      </nav>
    </div>
  </header>

  <!-- HERO -->
  <section class="hero">
    <div class="hero-overlay"></div>
    <div class="container hero-content">
      <p class="eyebrow">Program Roster</p>
      <h1>Participants</h1>
      <p class="hero-subtitle">
        View and manage everyone enrolled across Ella Rises programs.
      </p>
      <% if (userLevel !== 'U') { %>
        <div class="hero-actions">
          <a href="/participants/new" class="btn btn--primary">Add participant</a>
        </div>
      <% } %>
    </div>
  </section>

  <!-- PARTICIPANT TABLE -->
  <section id="participants" class="section section--light">
    <div class="container">
      <div class="section-header">
        <h2>All participants</h2>
        <p>A snapshot of everyone in the participants table.</p>
      </div>

      <div class="table-card">
        <div class="table-card__header" id="actions">
          <span>Participants</span>
          <div style="display: flex; gap: 0.5rem; flex-wrap: wrap; align-items: center;">
            <input type="search" id="participantSearch" placeholder="Search participants..." style="padding: 0.5rem 0.75rem; border: 1px solid var(--color-border); border-radius: 10px; min-width: 200px;" />
            <% if (userLevel !== 'U') { %>
              <a href="/participants/new" class="btn btn--primary btn--small">Add participant</a>
            <% } %>
          </div>
        </div>
        <div class="table-card__body">
          <table class="data-table">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <% if (userLevel !== 'U') { %><th>Actions</th><% } %>
              </tr>
            </thead>
            <tbody>
              <% if (participants && participants.length) { %>
                <% participants.forEach((participant) => { %>
                  <tr data-name="<%= `${participant. participant_first_name} ${participant. participant_last_name}`.toLowerCase() %>">
                    <td><%= participant.participant_id %></td>
                    <td><a href="/participants/<%= participant.participant_id %>"><%= participant.participatn_first_name %> <%= participant.participant_last_name %></a></td>
                    <td><%= participant.participant_email %></td>
                    <td><%= participant.phone %></td>
                    <% if (userLevel !== 'U') { %>
                      <td class="table-actions">
                        <a class="btn btn--outline btn--small" href="/participants/<%= participant.participant_id %>/edit">Edit</a>
                        <button type="button" class="btn btn--ghost btn--small delete-btn" data-id="<%= participant.participant_id %>" data-name="<%= participant. participant_first_name %> <%= participant. participant_last_name %>">Delete</button>
                      </td>
                    <% } %>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="<%= userLevel !== 'U' ? 9 : 8 %>" class="empty-row">No participants found.</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>

  <div class="modal-overlay">
    <div class="modal">
      <h3>Confirm delete</h3>
      <p id="deleteModalMessage">Are you sure you want to delete this participant?</p>
      <div class="modal-actions">
        <button class="btn btn--ghost" id="cancelDelete" type="button">No, keep</button>
        <button class="btn btn--primary" id="confirmDelete" type="button">Yes, delete</button>
      </div>
    </div>
  </div>

  <script>
    // Simple mobile nav toggle
    const navToggle = document.querySelector(".nav-toggle");
    const navLinks = document.querySelector(".nav-links");

    navToggle.addEventListener("click", () => {
      navLinks.classList.toggle("nav-links--open");
      navToggle.classList.toggle("nav-toggle--open");
    });

    const modalOverlay = document.querySelector(".modal-overlay");
    const modalMessage = document.querySelector("#deleteModalMessage");
    const confirmBtn = document.querySelector("#confirmDelete");
    const cancelBtn = document.querySelector("#cancelDelete");
    const deleteButtons = document.querySelectorAll(".delete-btn");
    let pendingId = null;

    deleteButtons.forEach((btn) => {
      btn.addEventListener("click", () => {
        pendingId = btn.dataset.id;
        const name = btn.dataset.name || "this participant";
        modalMessage.textContent = `Are you sure you want to delete ${name}?`;
        modalOverlay.classList.add("is-open");
      });
    });

    cancelBtn.addEventListener("click", () => {
      pendingId = null;
      modalOverlay.classList.remove("is-open");
    });

    confirmBtn.addEventListener("click", async () => {
      if (!pendingId) return;
      try {
        const res = await fetch(`/participants/${pendingId}/delete`, { method: "POST" });
        if (!res.ok) throw new Error("Request failed");
        window.location.reload();
      } catch (err) {
        console.error(err);
        alert("Could not delete participant. Please try again.");
      } finally {
        pendingId = null;
        modalOverlay.classList.remove("is-open");
      }
    });

    // Simple client-side search by name
    const participantSearch = document.getElementById("participantSearch");
    const participantRows = Array.from(document.querySelectorAll("tbody tr"));

    participantSearch?.addEventListener("input", () => {
      const term = participantSearch.value.trim().toLowerCase();
      participantRows.forEach((row) => {
        const name = row.dataset.name || "";
        row.style.display = name.includes(term) ? "" : "none";
      });
    });
  </script>
</body>
</html>
