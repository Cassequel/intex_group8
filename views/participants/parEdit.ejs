<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Edit Participant | Ella Rises</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/styles/styles.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  <style>
    .avatar-upload {
      display: grid;
      gap: 0.6rem;
      align-items: center;
    }
    .avatar-circle {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      background: #f0f4f7;
      border: 2px dashed rgba(0, 0, 0, 0.08);
      display: grid;
      place-items: center;
      overflow: hidden;
      position: relative;
    }
    .avatar-circle img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
    }
    .upload-actions {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
    }
    .form-grid-two {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      gap: 1rem;
    }
    .form-grid-three {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1rem;
    }
  </style>
</head>
<body>
  <!-- NAVBAR -->
  <header class="site-header">
    <div class="container nav-container">
      <a href="/" class="logo">
        <span class="logo-mark">ER</span>
        <span class="logo-text">Ella Rises</span>
      </a>

      <nav class="nav">
        <button class="nav-toggle" aria-label="Toggle navigation">
          <span></span><span></span><span></span>
        </button>
        <ul class="nav-links">
          <li><a href="/">Home</a></li>
          <li><a href="/participants">Participants</a></li>
        </ul>
      </nav>
    </div>
  </header>

  <!-- HERO -->
  <section class="hero">
    <div class="hero-overlay"></div>
    <div class="container hero-content">
      <p class="eyebrow">Roster</p>
      <h1>Edit participant</h1>
      <p class="hero-subtitle">
        Update details and profile image for <%= participant.first_name %> <%= participant.last_name %>.
      </p>
    </div>
  </section>

  <!-- FORM -->
  <section class="section section--light">
    <div class="container">
      <div class="form-card">
        <% if (typeof error_message !== "undefined" && error_message) { %>
          <div class="alert alert--error"><%= error_message %></div>
        <% } %>
        <form class="form-grid" method="POST" action="/participants/<%= participant.participant_id %>/edit" enctype="multipart/form-data">
          <input type="hidden" name="existing_image" value="<%= participant.img || '' %>" />
          <div class="avatar-upload">
            <label for="profile_image">Profile image</label>
            <div class="avatar-circle" id="avatarPreview">
              <img
                id="avatarImg"
                alt="Profile preview"
                src="<%= participant.img || 'data:image/svg+xml;utf8,<svg xmlns=\"http://www.w3.org/2000/svg\" width=\"160\" height=\"160\" viewBox=\"0 0 160 160\" fill=\"none\"><circle cx=\"80\" cy=\"80\" r=\"80\" fill=\"%23f0f4f7\"/><path d=\"M80 76c11.046 0 20-8.954 20-20s-8.954-20-20-20-20 8.954-20 20 8.954 20 20 20Z\" fill=\"%2399b7c6\"/><path d=\"M48 126c0-13.255 14.327-24 32-24s32 10.745 32 24v6H48v-6Z\" fill=\"%2399b7c6\"/></svg>' %>"
              />
            </div>
            <div class="upload-actions">
              <label class="btn btn--outline btn--small" for="profile_image">Replace photo</label>
              <input id="profile_image" name="profile_image" type="file" accept="image/*" hidden />
              <button type="button" class="btn btn--ghost btn--small" id="clearImage">Remove</button>
            </div>
          </div>

          <div class="form-grid-two">
            <div class="form-field">
              <label for="first_name">First name</label>
              <input id="first_name" name="first_name" type="text" value="<%= participant.first_name || '' %>" required />
            </div>
            <div class="form-field">
              <label for="last_name">Last name</label>
              <input id="last_name" name="last_name" type="text" value="<%= participant.last_name || '' %>" required />
            </div>
          </div>

          <div class="form-field">
            <label for="email">Email</label>
            <input id="email" name="email" type="email" value="<%= participant.email || '' %>" required />
          </div>

          <div class="form-grid-two">
            <div class="form-field">
              <label for="dob">Date of birth</label>
              <input id="dob" name="dob" type="date" value="<%= participant.dob ? (participant.dob.toISOString ? participant.dob.toISOString().slice(0,10) : String(participant.dob).slice(0,10)) : '' %>" />
            </div>
            <div class="form-field">
              <label for="phone">Phone</label>
              <input id="phone" name="phone" type="tel" value="<%= participant.phone || '' %>" />
            </div>
          </div>

          <div class="form-grid-three">
            <div class="form-field">
              <label for="city">City</label>
              <input id="city" name="city" type="text" value="<%= participant.city || '' %>" />
            </div>
            <div class="form-field">
              <label for="state">State</label>
              <input id="state" name="state" type="text" value="<%= participant.state || '' %>" />
            </div>
            <div class="form-field">
              <label for="zip">Zip code</label>
              <input id="zip" name="zip" type="text" value="<%= participant.zip || '' %>" />
            </div>
          </div>

          <div class="form-grid-two">
            <div class="form-field">
              <label for="school">School</label>
              <input id="school" name="school" type="text" value="<%= participant.school || participant.school_or_employer || '' %>" />
            </div>
            <div class="form-field">
              <label for="employer">Employer</label>
              <input id="employer" name="employer" type="text" value="<%= participant.employer || '' %>" />
            </div>
          </div>

          <div class="form-field">
            <label for="field_of_interest">Field of interest</label>
            <input id="field_of_interest" name="field_of_interest" type="text" value="<%= participant.field_of_interest || '' %>" />
          </div>

          <div class="form-field" style="margin-top: 0.5rem;">
            <button type="submit" class="btn btn--primary btn--large">Save changes</button>
            <a href="/participants/<%= participant.participant_id %>" class="btn btn--ghost btn--large" style="margin-left: 0.5rem;">Cancel</a>
          </div>
        </form>
      </div>
    </div>
  </section>

  <script>
    // Mobile nav toggle
    const navToggle = document.querySelector(".nav-toggle");
    const navLinks = document.querySelector(".nav-links");
    navToggle.addEventListener("click", () => {
      navLinks.classList.toggle("nav-links--open");
      navToggle.classList.toggle("nav-toggle--open");
    });

    // Image preview
    const fileInput = document.getElementById("profile_image");
    const avatarImg = document.getElementById("avatarImg");
    const clearBtn = document.getElementById("clearImage");
    const placeholder =
      'data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="160" height="160" viewBox="0 0 160 160" fill="none"><circle cx="80" cy="80" r="80" fill="%23f0f4f7"/><path d="M80 76c11.046 0 20-8.954 20-20s-8.954-20-20-20-20 8.954-20 20 8.954 20 20 20Z" fill="%2399b7c6"/><path d="M48 126c0-13.255 14.327-24 32-24s32 10.745 32 24v6H48v-6Z" fill="%2399b7c6"/></svg>';

    fileInput?.addEventListener("change", () => {
      const file = fileInput.files?.[0];
      if (!file) return;
      const reader = new FileReader();
      reader.onload = (e) => {
        avatarImg.src = e.target?.result || placeholder;
      };
      reader.readAsDataURL(file);
    });

    clearBtn?.addEventListener("click", () => {
      fileInput.value = "";
      avatarImg.src = placeholder;
      const hiddenInput = document.querySelector('input[name="existing_image"]');
      if (hiddenInput) hiddenInput.value = "";
    });
  </script>
</body>
</html>
