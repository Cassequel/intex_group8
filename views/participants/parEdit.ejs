<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Edit Participant | Ella Rises</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/styles/styles.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  <style>
    .form-grid-two {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      gap: 1rem;
    }
    .form-grid-three {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1rem;
    }
  </style>
</head>
<body>
  <!-- NAVBAR -->
  <header class="site-header">
    <div class="container nav-container">
      <a href="/" class="logo">
        <span class="logo-mark">ER</span>
        <span class="logo-text">Ella Rises</span>
      </a>

      <nav class="nav">
        <button class="nav-toggle" aria-label="Toggle navigation">
          <span></span><span></span><span></span>
        </button>
        <ul class="nav-links">
          <li><a href="/">Home</a></li>
          <li><a href="/participants">Participants</a></li>
        </ul>
      </nav>
    </div>
  </header>

  <!-- HERO -->
  <section class="hero">
    <div class="hero-overlay"></div>
    <div class="container hero-content">
      <p class="eyebrow">Roster</p>
      <h1>Edit participant</h1>
      <p class="hero-subtitle">
        Update details and profile image for <%= participant.participant_first_name %> <%= participant.participant_last_name %>.
      </p>
    </div>
  </section>

  <!-- FORM -->
  <section class="section section--light">
    <div class="container">
      <div class="form-card">
        <% if (typeof error_message !== "undefined" && error_message) { %>
          <div class="alert alert--error"><%= error_message %></div>
        <% } %>
        <form class="form-grid" method="POST" action="/participants/<%= participant.participant_id %>/edit">

          <div class="form-grid-two">
            <div class="form-field">
              <label for=" participant_first_name">First name</label>
              <input id=" participant_first_name" name=" participant_first_name" type="text" value="<%= participant.participant_first_name || '' %>" required />
            </div>
            <div class="form-field">
              <label for=" participant_last_name">Last name</label>
              <input id=" participant_last_name" name=" participant_last_name" type="text" value="<%= participant.participant_last_name || '' %>" required />
            </div>
          </div>

          <div class="form-field">
            <label for="email">Email</label>
            <input id="email" name="email" type="email" value="<%= participant.participant_email || '' %>" required />
          </div>

          <div class="form-grid-two">
            <div class="form-field">
              <label for=" participant_dob">Date of birth</label>
              <input id=" participant_dob" name=" participant_dob" type="date" value="<%= participant.participant_dob ? (participant.participant_dob.toISOString ? participant.participant_dob.toISOString().slice(0,10) : String(participant.participant_dob).slice(0,10)) : '' %>" />
            </div>
            <div class="form-field">
              <label for="phone">Phone</label>
              <input id="phone" name="phone" type="tel" value="<%= participant.phone || '' %>" />
            </div>
          </div>

          <div class="form-grid-three">
            <div class="form-field">
              <label for="city">City</label>
              <input id="city" name="city" type="text" value="<%= participant.city || '' %>" />
            </div>
            <div class="form-field">
              <label for="state">State</label>
              <input id="state" name="state" type="text" value="<%= participant.state || '' %>" />
            </div>
            <div class="form-field">
              <label for="zip">Zip code</label>
              <input id="zip" name="zip" type="text" value="<%= participant.zip || '' %>" />
            </div>
          </div>

          <div class="form-grid-two">
            <div class="form-field">
              <label for="school">School</label>
              <input id="school" name="school" type="text" value="<%= participant.school || participant.participant_school_or_employer || '' %>" />
            </div>
            <div class="form-field">
              <label for="employer">Employer</label>
              <input id="employer" name="employer" type="text" value="<%= participant.participant_employer || '' %>" />
            </div>
          </div>

          <div class="form-field">
            <label for="field_of_interest">Field of interest</label>
            <input id="field_of_interest" name="field_of_interest" type="text" value="<%= participant.participant_field_of_interest || '' %>" />
          </div>

          <div class="form-field" style="margin-top: 0.5rem;">
            <button type="submit" class="btn btn--primary btn--large">Save changes</button>
            <a href="/participants/<%= participant.participant_id %>" class="btn btn--ghost btn--large" style="margin-left: 0.5rem;">Cancel</a>
          </div>
        </form>
      </div>
    </div>
  </section>

  <script>
    // Mobile nav toggle
    const navToggle = document.querySelector(".nav-toggle");
    const navLinks = document.querySelector(".nav-links");
    navToggle.addEventListener("click", () => {
      navLinks.classList.toggle("nav-links--open");
      navToggle.classList.toggle("nav-toggle--open");
    });
  </script>
</body>
</html>
