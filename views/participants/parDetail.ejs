<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= participant. participant_first_name %> <%= participant. participant_last_name %> | Participant</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/png" href="/images/favicon.png" />
  <link rel="stylesheet" href="/styles/styles.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  <style>
    .detail-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
      gap: 1rem;
      margin-top: 1.5rem;
    }
    .detail-card {
      background: #ffffff;
      border-radius: 12px;
      padding: 1.2rem 1.3rem;
      box-shadow: var(--shadow-soft);
      border: 1px solid rgba(153, 183, 198, 0.18);
    }
    .detail-card h3 {
      margin: 0 0 0.4rem;
      font-size: 1rem;
      color: var(--color-primary-dark);
    }
    .detail-value {
      margin: 0;
      color: var(--color-text-soft);
      font-weight: 600;
    }
    .avatar-large {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      border: 2px solid rgba(153, 183, 198, 0.35);
      background: #f0f4f7;
      overflow: hidden;
      display: grid;
      place-items: center;
    }
    .avatar-large img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
    }
  </style>
</head>
<body>
  <!-- NAVBAR -->
  <%- include('../partials/navbar') %>

  <!-- HERO -->
  <section class="hero">
    <div class="hero-overlay"></div>
    <div class="container hero-content">
      <p class="eyebrow">Participant</p>
      <h1><%= participant. participant_first_name %> <%= participant. participant_last_name %></h1>
      <p class="hero-subtitle">
        Profile details and contact information.
      </p>
    </div>
  </section>

  <!-- DETAILS -->
  <section class="section section--light">
    <div class="container">
      <%
        const fieldInterest = participant.participant_field_of_interest;
        const fieldInterestDisplay = fieldInterest
          ? (String(fieldInterest).trim().toLowerCase() === 'both'
              ? `${fieldInterest} (STEM and Arts)`
              : fieldInterest)
          : "Not provided";
      %>
      <div>
        <h2 style="margin: 0 0 0.5rem;">Contact</h2>
        <p style="margin: 0.15rem 0;">Email: <%= participant.participant_email || "Not provided" %></p>
        <p style="margin: 0.15rem 0;">Phone: <%= participant.phone || "Not provided" %></p>
      </div>

      <div class="detail-grid">
        <div class="detail-card">
          <h3>Date of birth</h3>
          <p class="detail-value"><%= participant.participant_dob ? (participant.participant_dob.toISOString ? participant.participant_dob.toISOString().slice(0,10) : String(participant.participant_dob).slice(0,10)) : "Not provided" %></p>
        </div>
        <div class="detail-card">
          <h3>City</h3>
          <p class="detail-value"><%= participant.city || "Not provided" %></p>
        </div>
        <div class="detail-card">
          <h3>State</h3>
          <p class="detail-value"><%= participant.state || "Not provided" %></p>
        </div>
        <div class="detail-card">
          <h3>Zip code</h3>
          <p class="detail-value"><%= participant.zip || "Not provided" %></p>
        </div>
        <div class="detail-card">
          <h3>School / Employer</h3>
          <p class="detail-value"><%= participant.school || participant.participant_school_or_employer || "Not provided" %></p>
        </div>
        <div class="detail-card">
          <h3>Field of interest</h3>
          <p class="detail-value"><%= fieldInterestDisplay %></p>
        </div>
        <div class="detail-card">
          <h3>Role</h3>
          <p class="detail-value"><%= participant.role || "Not provided" %></p>
        </div>
        <div class="detail-card">
          <h3>Total donations</h3>
          <p class="detail-value"><%= typeof participant.total_donations !== "undefined" && participant.total_donations !== null ? participant.total_donations : "Not provided" %></p>
        </div>
      </div>

      <!-- MILESTONES SECTION -->
      <div style="margin-top: 2rem;">
        <h2 style="margin-bottom: 0.5rem;">Milestones</h2>
        <div class="table-card">
          <div class="table-card__body">
            <table class="data-table">
              <thead>
                <tr>
                  <th>Title</th>
                  <th>Status</th>
                  <th>Achieved date</th>
                  <% if (typeof userLevel !== 'undefined' && userLevel === 'M') { %>
                    <th>Actions</th>
                  <% } %>
                </tr>
              </thead>
              <tbody>
                <% if (milestones && milestones.length) { %>
                  <% milestones.forEach((m) => { %>
                    <tr>
                      <td><a href="/milestones/<%= m.milestone_id %>"><%= m.milestone_title %></a></td>
                      <td>
                        <%
                          const today = new Date();
                          const achieved = m.milestone_date ? new Date(m.milestone_date) : null;
                          const status = achieved && achieved < today ? "Completed" : "Planned";
                        %>
                        <%= status %>
                      </td>
                      <td>
                        <%
                          const d = m.milestone_date;
                          let formattedDate = "";
                          if (d) {
                            formattedDate = d.toISOString ? d.toISOString().slice(0,10) : String(d).slice(0,10);
                          }
                        %>
                        <%= formattedDate %>
                      </td>
                      <% if (typeof userLevel !== 'undefined' && userLevel === 'M') { %>
                        <td>
                          <a href="/milestones/<%= m.milestone_id %>/edit" class="btn btn--outline" style="font-size: 0.85rem; padding: 0.4rem 0.8rem;">Edit</a>
                          <form action="/milestones/<%= m.milestone_id %>/delete" method="POST" style="display: inline; margin-left: 0.25rem;">
                            <button type="submit" class="btn btn--ghost" style="font-size: 0.85rem; padding: 0.4rem 0.8rem;" onclick="return confirm('Are you sure you want to delete this milestone?')">Delete</button>
                          </form>
                        </td>
                      <% } %>
                    </tr>
                  <% }) %>
                <% } else { %>
                  <tr>
                    <td colspan="<%= (typeof userLevel !== 'undefined' && userLevel === 'M') ? '4' : '3' %>" class="empty-row">No milestones found for this participant.</td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <div style="margin-top: 1.5rem;">
        <a href="/participants/<%= participant.participant_id %>/edit" class="btn btn--outline">Edit participant</a>
        <% if (returnTo) { %>
          <a href="<%= returnTo %>" class="btn btn--ghost" style="margin-left: 0.5rem;">Back</a>
        <% } else { %>
          <a href="/participants" class="btn btn--ghost" style="margin-left: 0.5rem;">Back to participants</a>
        <% } %>
      </div>
    </div>
  </section>

  <script>
    // Mobile nav toggle
    const navToggle = document.querySelector(".nav-toggle");
    const navLinks = document.querySelector(".nav-links");
    navToggle.addEventListener("click", () => {
      navLinks.classList.toggle("nav-links--open");
      navToggle.classList.toggle("nav-toggle--open");
    });
  </script>
</body>
</html>
