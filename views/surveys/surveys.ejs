<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Surveys | Ella Rises</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/png" href="/images/favicon.png" />
  <link rel="stylesheet" href="/styles/styles.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  <style>
    .comment-preview {
      max-width: 420px;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }
  </style>
</head>
<body>
  <!-- NAVBAR -->
  <%- include('../partials/navbar') %>

  <!-- HERO -->
  <section class="hero">
    <div class="hero-overlay"></div>
    <div class="container hero-content">
      <p class="eyebrow">Feedback</p>
      <h1>Surveys</h1>
      <p class="hero-subtitle">View participant feedback across events.</p>
      <div class="hero-actions">
        <% if (userLevel === 'M') { %>
          <a href="/surveys/new" class="btn btn--primary">Add survey</a>
        <% } %>
      </div>
    </div>
  </section>

  <!-- SURVEYS TABLE -->
  <section class="section section--light">
    <div class="container">
      <div class="section-header">
        <h2>All surveys</h2>
        <p>Quick view of respondent, event, bucket, and submitted date.</p>
      </div>

      <div class="table-card">
        <div class="table-card__header">
          <span>Surveys</span>
          <div style="display: flex; gap: 0.5rem; flex-wrap: wrap; align-items: center;">
            <input type="search" id="surveySearch" placeholder="Search participant or event..." style="padding: 0.5rem 0.75rem; border: 1px solid var(--color-border); border-radius: 10px; min-width: 220px;" />
            <label style="display: inline-flex; align-items: center; gap: 0.4rem; font-size: 0.9rem;">
              Min date
              <input type="date" id="minDate" style="padding: 0.35rem 0.5rem; border: 1px solid var(--color-border); border-radius: 8px;" />
            </label>
            <label style="display: inline-flex; align-items: center; gap: 0.4rem; font-size: 0.9rem;">
              Max date
              <input type="date" id="maxDate" style="padding: 0.35rem 0.5rem; border: 1px solid var(--color-border); border-radius: 8px;" />
            </label>
            <% if (userLevel === 'M') { %>
              <a href="/surveys/new" class="btn btn--primary btn--small">Add survey</a>
            <% } %>
          </div>
        </div>
        <div class="table-card__body">
          <table class="data-table">
            <thead>
              <tr>
                <th>ID</th>
                <th>Participant</th>
                <th>Event</th>
                <th>Submitted</th>
                <th>Comments</th>
                <% if (userLevel === 'M') { %><th>Actions</th><% } %>
              </tr>
            </thead>
            <tbody>
              <% if (surveys && surveys.length) { %>
                <% surveys.forEach((survey) => { %>
                  <tr
                    data-name="<%= (survey.participant_name || '').toLowerCase() %>"
                    data-event="<%= (survey.event_name || '').toLowerCase() %>"
                    data-date="<%= (() => { const d = survey.survey_submission_date || survey.submission_date; try { return d ? new Date(d).toISOString() : ''; } catch(e) { return ''; } })() %>">
                    <td><%= survey.survey_id %></td>
                    <td><a href="/surveys/<%= survey.survey_id %>"><%= survey.participant_name || "Unknown participant" %></a></td>
                    <td><%= survey.event_name || "Unknown event" %></td>
                    <td>
                      <%
                        const submitted = survey.survey_submission_date || survey.submission_date;
                        let submittedDate = "";
                        if (submitted) {
                          submittedDate = submitted.toISOString ? submitted.toISOString().replace('T',' ').slice(0,16) : String(submitted);
                        }
                      %>
                      <%= submittedDate %>
                    </td>
                    <td class="comment-preview"><%= survey.survey_comments || survey.comments || "" %></td>
                    <% if (userLevel === 'M') { %>
                      <td class="table-actions">
                        <a class="btn btn--outline btn--small" href="/surveys/<%= survey.survey_id %>/edit">Edit</a>
                        <form class="inline-form" method="POST" action="/surveys/<%= survey.survey_id %>/delete">
                          <button type="submit" class="btn btn--ghost btn--small">Delete</button>
                        </form>
                      </td>
                    <% } %>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="<%= userLevel === 'M' ? 7 : 6 %>" class="empty-row">No surveys found.</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>

  <script>
    const navToggle = document.querySelector(".nav-toggle");
    const navLinks = document.querySelector(".nav-links");
    navToggle.addEventListener("click", () => {
      navLinks.classList.toggle("nav-links--open");
      navToggle.classList.toggle("nav-toggle--open");
    });

    // Search by participant, event, and date range
    const surveySearch = document.getElementById("surveySearch");
    const minDateInput = document.getElementById("minDate");
    const maxDateInput = document.getElementById("maxDate");
    const surveyRows = Array.from(document.querySelectorAll("tbody tr"));

    const applySurveyFilters = () => {
      const term = surveySearch.value.trim().toLowerCase();
      const minDate = minDateInput.value ? new Date(minDateInput.value).getTime() : null;
      const maxDate = maxDateInput.value ? new Date(maxDateInput.value).getTime() + 24 * 60 * 60 * 1000 - 1 : null; // end of day

      surveyRows.forEach((row) => {
        const name = row.dataset.name || "";
        const eventName = row.dataset.event || "";
        const rowText = row.textContent.toLowerCase();
        const dateValue = row.dataset.date ? new Date(row.dataset.date).getTime() : null;

        const matchesTerm = !term || name.includes(term) || eventName.includes(term) || rowText.includes(term);
        const matchesMin = minDate === null || (dateValue !== null && dateValue >= minDate);
        const matchesMax = maxDate === null || (dateValue !== null && dateValue <= maxDate);

        row.style.display = matchesTerm && matchesMin && matchesMax ? "" : "none";
      });
    };

    surveySearch?.addEventListener("input", applySurveyFilters);
    minDateInput?.addEventListener("change", applySurveyFilters);
    maxDateInput?.addEventListener("change", applySurveyFilters);

    applySurveyFilters();
  </script>
</body>
</html>
